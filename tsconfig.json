{
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "plugins": [],
    "removeComments": true,
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["src/**/*.ts", "webpack.config.ts"],
  "exclude": ["./tests/", "./node_modules/", "./dist/"]
}
